  <style>
    :root{font-family:system-ui,-apple-system,Segoe UI,Roboto,'Helvetica Neue',Arial;line-height:1.4;color:#222}
    body{margin:0;padding:1.5rem;background:#f7f8fb}
    .container{max-width:900px;margin:0 auto;background:#fff;padding:1.5rem;border-radius:8px;box-shadow:0 6px 18px rgba(0,0,0,.06)}
    header, main, footer{display:block}
    header h1{margin:0 0 .25rem;font-size:1.5rem}
    header p{margin:0 0 1rem;color:#555}
    nav ul{display:flex;gap:.5rem;list-style:none;padding:0;margin:0 0 1rem}
    nav a{padding:.4rem .6rem;background:#eef; border-radius:6px;text-decoration:none;color:#064}
    form{display:grid;grid-template-columns:1fr;gap:1rem}
    fieldset{border:1px solid #e2e6ef;padding:1rem;border-radius:6px}
    legend{font-weight:600}
    .row{display:flex;gap:1rem;flex-wrap:wrap}
    label{display:block;font-size:.95rem;margin-bottom:.25rem}
    input,select,textarea{width:100%;padding:.5rem;border:1px solid #d0d4e0;border-radius:6px}
    .small{max-width:220px}
    table{width:100%;border-collapse:collapse;margin-top:.5rem}
    th,td{border:1px solid #e6e9f2;padding:.5rem;text-align:left}
    .media{display:flex;gap:1rem;flex-wrap:wrap}
    .actions{display:flex;gap:.5rem;align-items:center}
    button{padding:.55rem .9rem;border-radius:8px;border:0;cursor:pointer}
    button[type="submit"]{background:#0069d9;color:#fff}
    button[type="reset"]{background:#e6e6e6}
