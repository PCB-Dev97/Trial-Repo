/* Global Styles */
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  line-height: 1.6;
  background-color: #f5f5f5;
  color: #333;
}

/* Header, Main, Footer Layout */
header, main, footer {
  max-width: 800px;
  margin: 20px auto;
  padding: 20px;
}

/* Box Model Demonstration */
.box {
  background-color: #fff;
  border: 2px solid #ccc;
  padding: 20px;
  margin-bottom: 20px;
  box-sizing: border-box;
  border-radius: 8px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

/* Element Selectors */
h1, h2 {
  color: #005577;
}

ul {
  padding-left: 20px;
}

a {
  color: #0077cc;
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}
